<database name="powergrid" defaultIdMethod="native">
  <table name="user" phpName="User">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="32" required="true"/>
    <column name="email" type="varchar" size="254" required="true"/>
    <column name="username" type="varchar" size="64" require="true"/>
    <column name="password" type="varchar" size="255" required="true"/>
    <unique>
      <unique-column name="email"/>
    </unique>
  </table>
  <table name="user_group_authorization" phpName="UserGroupAuthorization">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="group_name" type="varchar"/>
    <column name="user_id" type="integer"/>
    <foreign-key foreignTable="user" phpName="GroupUser" refPhpName="AuthorizationGroup">
      <reference local="user_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="user_token" phpName="UserToken">
    <column name="token_string" type="varchar" size="255" required="true" primaryKey="true"/>
    <column name="user_id" type="integer" required="true"/>
    <column name="expiration_date" type="timestamp" required="true"/>
    <foreign-key foreignTable="user" phpName="TokenUser" refPhpName="UserToken">
      <reference local="user_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="player" phpName="Player">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="32"/>
    <column name="user_id" type="integer" required="false"/>
    <column name="game_id" type="integer" required="false"/>
    <column name="wallet_id" type="integer" required="false"/>
    <column name="color_name" type="varchar" required="false"/>
    <foreign-key foreignTable="user" phpName="PlayerUser" refPhpName="Player">
      <reference local="user_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="game" phpName="CurrentGame" refPhpName="Player">
      <reference local="game_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="wallet" phpName="PlayerWallet" refPhpName="Player">
      <reference local="wallet_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="game" phpName="Game">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="255"/>
    <column name="has_started" type="boolean" required="true" defaultValue="false"/>
    <column name="player_turn_order" type="array" required="false"/>
    <column name="phase_number" type="integer" required="false" defaultValue="1"/>
    <column name="card_limit" type="integer" required="false"/>
    <column name="turn_number" type="integer" required="false" defaultValue="1"/>
    <column name="round_number" type="integer" required="false" defaultValue="1"/>
    <column name="step_number" type="integer" required="false" defaultValue="1"/>
    <column name="next_player_id" type="integer" required="false"/>
    <column name="owner_id" type="integer" required="false"/>
    <column name="bank_id" type="integer" required="false"/>
    <column name="map_id" type="integer" required="false"/>
    <foreign-key foreignTable="player" phpName="NextPlayer" refPhpName="Game">
      <reference local="next_player_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="user" phpName="OwnerUser" refPhpName="Game">
      <reference local="owner_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="bank" phpName="GameBank" refPhpName="Game">
      <reference local="bank_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="map" phpName="GameMap" refPhpName="Game">
      <reference local="map_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="bank" phpName="Bank">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="balance" type="integer" required="true"/>
  </table>
  <table name="wallet" phpName="Wallet">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="balance" type="integer" required="false" defaultValue="50"/>
  </table>
  <table name="card" phpName="Card">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/> <!-- Id is minimum price for cards -->
    <column name="resource_cost" type="integer" required="false"/>
    <column name="resource_type_id" type="integer" required="false"/>
    <foreign-key foreignTable="resource_type" phpName="ResourceType" refPhpName="Card">
      <reference local="resource_type_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="resource_type" phpName="ResourceType">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="64" reqiured="true"/>
  </table>
  <table name="resource_store" phpName="ResourceStore">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="minimum_price" type="integer" required="true"/>
    <column name="quantity" type="integer" required="true"/>
    <column name="game_id" type="integer" required="true"/>
    <column name="resource_type_id" type="integer" required="true"/>
    <foreign-key foreignTable="game" phpName="Game" refPhpName="ResourceStore">
      <reference local="game_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="resource_type" phpName="ResourceType" refPhpName="ResourceStore">
      <reference local="resource_type_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="map" phpName="Map">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="64"/>
  </table>
  <table name="city" phpName="City">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="name" type="varchar" size="128" required="false"/>
    <column name="map_id" type="integer" required="false"/>
    <foreign-key foreignTable="map">
      <reference local="map_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="turn_order" phpName="TurnOrder">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="rank" type="integer" required="false"/>
    <column name="game_id" type="integer" required="false"/>
    <column name="player_id" type="integer" required="false"/>
    <column name="round_number" type="integer" required="false"/>
    <foreign-key foreignTable="game" phpName="Game" refPhpName="TurnOrderGame">
      <reference local="game_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="player" phpName="Player" refPhpName="TurnOrderPlayer">
      <reference local="player_id" foreign="id"/>
    </foreign-key>
  </table>

  <!-- Relation tables -->

  <!--
       All possible cards associated with a game, except those that have been trashed.
       These may be in a user's hand or in the auction.
  -->
  <table name="game_card" phpName="GameCard">
    <column name="id" type="integer" required="true" autoIncrement="true"/>
    <column name="card_id" type="integer" required="false"/>
    <column name="game_id" type="integer" required="false"/>
    <column name="deck_position" type="integer" required="false"/>
    <foreign-key foreignTable="game" phpName="Game" refPhpName="GameCard">
      <reference local="game_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="card" phpName="Card" refPhpName="GameCard">
      <reference local="card_id" foreign="id"/>
    </foreign-key>
  </table>
  <!-- Only the cards active in the auction at the time. -->
  <table name="game_auction" phpName="GameAuction">
    <column name="id"/>
    <column name="game_id" type="integer"/>
    <column name="card_id" type="integer"/>
    <column name="auction_position" type="integer"/>
    <foreign-key foreignTable="game" phpName="AuctionGame" refPhpName="GameAuction">
      <reference local="game_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="game_card" phpName="AuctionCard" refPhpName="AuctionGameCard">
      <reference local="card_id" foreign="card_id"/>
    </foreign-key>
  </table>
  <table name="player_resource" phpName="PlayerResource">
    <column name="resource_type_id" type="integer" required="true" primaryKey="true"/>
    <column name="player_id" type="integer" required="true" primaryKey="true"/>
    <foreign-key foreignTable="resource_type" phpName="ResourceType" refPhpName="PlayerResource">
      <reference local="resource_type_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="player" phpName="Player" refPhpName="PlayerResource">
      <reference local="player_id" foreign="id"/>
    </foreign-key>

    <column name="quantity" type="integer" required="true"/>
  </table>
  <table name="player_city" phpName="PlayerCity">
    <column name="player_id" type="integer" required="true" primaryKey="true"/>
    <column name="city_id" type="integer" required="true" primaryKey="true"/>
    <foreign-key foreignTable="player" phpName="Player" refPhpName="PlayerCity">
      <reference local="player_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="city" phpName="City" refPhpName="PlayerCity">
      <reference local="city_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="player_card" phpName="PlayerCard">
    <column name="player_id" type="integer" required="true" primaryKey="true"/>
    <column name="card_id" type="integer" required="true" primaryKey="true"/>
    <foreign-key foreignTable="player" phpName="Player" refPhpName="PlayerCard">
      <reference local="player_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="card" phpName="Card" refPhpName="PlayerCard">
      <reference local="card_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="game_city" phpName="GameCity">
    <column name="game_id" type="integer" required="true" primaryKey="true"/>
    <column name="city_id" type="integer" required="true" primaryKey="true"/>
    <column name="build_order" type="enum" valueSet="1,2,3"/>
    <foreign-key foreignTable="game" phpName="Game" refPhpName="GameCity">
      <reference local="game_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="city" phpName="City" refPhpName="GameCity">
      <reference local="city_id" foreign="id"/>
    </foreign-key>
  </table>
  <table name="city_connection" phpName="CityConnection">
    <column name="city_from" type="integer" required="false" primaryKey="true"/>
    <column name="city_to" type="integer" required="false" primaryKey="true"/>
    <column name="map_id" type="integer" required="false" primaryKey="false"/>
    <column name="cost" type="integer" required="false" primaryKey="false"/>
    <foreign-key foreignTable="city" phpName="FromCity">
      <reference local="city_from" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="city" phpName="ToCity">
      <reference local="city_to" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="map">
      <reference local="map_id" foreign="id"/>
    </foreign-key>
  </table>
</database>
